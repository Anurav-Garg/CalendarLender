// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username        String     @id
  name            String
  email           String     @unique
  password        String
  ownCalendars    Calendar[] @relation("OwnCalendars")
  sharedCalendars Calendar[]

  @@index([email])
}

model Calendar {
  id            String          @id @default(cuid())
  name          String
  CalendarEvent CalendarEvent[]
  owner         User            @relation("OwnCalendars", fields: [ownerUsername], references: [username], onDelete: Cascade)
  ownerUsername String
  sharedTo      User[]

  @@unique([name, ownerUsername])
}

model CalendarEvent {
  id          String   @id @default(cuid())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  calendar    Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  calendarId  String

  @@unique([title, calendarId])
}
